# Sentry Configuration for Error Tracking
SENTRY_LARAVEL_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=sentimentshield@1.0.0

# Sentry Performance & Security
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_SAMPLE_RATE=1.0
SENTRY_SEND_DEFAULT_PII=false
SENTRY_MAX_BREADCRUMBS=50
SENTRY_MAX_VALUE_LENGTH=2048

# Sentry Breadcrumbs Configuration
SENTRY_BREADCRUMBS_LOGS=true
SENTRY_BREADCRUMBS_CACHE=true
SENTRY_BREADCRUMBS_LIVEWIRE=false
SENTRY_BREADCRUMBS_SQL_QUERIES=false
SENTRY_BREADCRUMBS_SQL_BINDINGS=false
SENTRY_BREADCRUMBS_QUEUE_INFO=true
SENTRY_BREADCRUMBS_COMMAND_INFO=true
SENTRY_BREADCRUMBS_HTTP_CLIENT_REQUESTS=true

# Sentry Integrations
SENTRY_ENABLE_TRACING=true
SENTRY_CAPTURE_FAILED_JOBS=true
SENTRY_CAPTURE_SQL_QUERIES=false

# Sentry Session Tracking
SENTRY_AUTO_SESSION_TRACKING=true
SENTRY_SESSION_SAMPLE_RATE=1.0

# Sentry HTTP Configuration
SENTRY_HTTP_TIMEOUT=5
SENTRY_HTTP_CONNECT_TIMEOUT=1
SENTRY_HTTP_COMPRESSION=true

# Sentry Caching
SENTRY_CACHE_ENABLED=true
SENTRY_CACHE_PREFIX=sentry:

# Sentry Server Name
SENTRY_SERVER_NAME=sentimentshield-prod

# Laravel Telescope Configuration
TELESCOPE_ENABLED=false  # Disabled by default in production
TELESCOPE_PATH=admin/telescope
TELESCOPE_DRIVER=database

# Telescope Performance Settings
TELESCOPE_RECORDING_ENABLED=false  # Disabled in production
TELESCOPE_RECORDING_PROBABILITY=0.01  # 1% sampling in production
TELESCOPE_PRUNE_HOURS=48  # Short retention in production

# Telescope Watchers (Production Optimized)
TELESCOPE_BATCH_WATCHER=true
TELESCOPE_CACHE_WATCHER=false  # Disabled in production
TELESCOPE_COMMAND_WATCHER=true
TELESCOPE_DUMP_WATCHER=true
TELESCOPE_DUMP_WATCHER_ALWAYS=false
TELESCOPE_EVENT_WATCHER=true
TELESCOPE_EXCEPTION_WATCHER=true
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_LOG_LEVEL=warning
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=false  # Disabled in production
TELESCOPE_MODEL_HYDRATIONS=false
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=false  # Disabled in production
TELESCOPE_SLOW_QUERY_THRESHOLD=500
TELESCOPE_REDIS_WATCHER=false  # Disabled in production
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_REQUEST_SIZE_LIMIT=64
TELESCOPE_SCHEDULE_WATCHER=true
TELESCOPE_VIEW_WATCHER=false  # Disabled in production
TELESCOPE_CLIENT_REQUEST_WATCHER=true

# Telescope Queue Configuration
TELESCOPE_QUEUE_CONNECTION=redis
TELESCOPE_QUEUE=telescope
TELESCOPE_QUEUE_BATCH_SIZE=25

# Telescope Security Configuration
TELESCOPE_IP_WHITELIST=  # Comma-separated IPs (e.g., 192.168.1.100,10.0.0.50)
TELESCOPE_REQUIRE_AUTH=true
TELESCOPE_ALLOWED_ROLES=admin,developer  # Comma-separated roles
TELESCOPE_SESSION_TIMEOUT=3600  # 1 hour

# Telescope Performance Monitoring
TELESCOPE_SLOW_REQUEST_THRESHOLD=1000  # ms
TELESCOPE_MEMORY_LIMIT_THRESHOLD=128   # MB
TELESCOPE_CPU_THRESHOLD=80  # percentage

# Telescope Database Configuration
TELESCOPE_MAX_ENTRIES=10000
TELESCOPE_CLEANUP_BATCH_SIZE=1000
TELESCOPE_INDEX_OPTIMIZATION=true

# Telescope Integrations
TELESCOPE_SENTRY_INTEGRATION=true
TELESCOPE_SENTRY_SYNC_EXCEPTIONS=true
TELESCOPE_PROMETHEUS_INTEGRATION=false
TELESCOPE_PROMETHEUS_ENDPOINT=/metrics

# Telescope Alerting
TELESCOPE_ERROR_THRESHOLD=10     # errors per minute
TELESCOPE_SLOW_QUERY_ALERT=2000  # ms
TELESCOPE_MEMORY_ALERT=256       # MB
TELESCOPE_QUEUE_ALERT=100        # jobs

# Development Environment Overrides
# (Uncomment for local development)
