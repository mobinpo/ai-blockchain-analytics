{
  "family": "ai-blockchain-analytics-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ai-blockchain-analytics-task-role",
  "containerDefinitions": [
    {
      "name": "ai-blockchain-analytics-app",
      "image": "YOUR_ACCOUNT.dkr.ecr.YOUR_REGION.amazonaws.com/ai-blockchain-analytics:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        },
        {
          "containerPort": 2112,
          "protocol": "tcp"
        },
        {
          "containerPort": 2114,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "APP_NAME",
          "value": "AI Blockchain Analytics"
        },
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_DEBUG",
          "value": "false"
        },
        {
          "name": "APP_URL",
          "value": "https://api.aiblockchainanalytics.com"
        },
        {
          "name": "DB_CONNECTION",
          "value": "pgsql"
        },
        {
          "name": "DB_HOST",
          "value": "ai-blockchain-analytics-postgres.cluster-xxx.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_DATABASE",
          "value": "ai_blockchain_analytics"
        },
        {
          "name": "DB_USERNAME",
          "value": "aiblockchainanalytics"
        },
        {
          "name": "REDIS_HOST",
          "value": "ai-blockchain-analytics-redis.xxx.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "redis"
        },
        {
          "name": "SESSION_DRIVER",
          "value": "redis"
        },
        {
          "name": "QUEUE_CONNECTION",
          "value": "redis"
        },
        {
          "name": "RR_WORKERS",
          "value": "4"
        },
        {
          "name": "RR_MAX_JOBS",
          "value": "1000"
        },
        {
          "name": "CONTAINER_ROLE",
          "value": "app"
        },
        {
          "name": "LOG_CHANNEL",
          "value": "stderr"
        },
        {
          "name": "MAIL_MAILER",
          "value": "mailgun"
        },
        {
          "name": "TELESCOPE_ENABLED",
          "value": "false"
        },
        {
          "name": "TELESCOPE_FORCE_ENABLE",
          "value": "false"
        },
        {
          "name": "SENTRY_ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "SENTRY_TRACES_SAMPLE_RATE",
          "value": "0.05"
        },
        {
          "name": "SENTRY_PROFILES_SAMPLE_RATE",
          "value": "0.01"
        }
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/db-password"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/redis-password"
        },
        {
          "name": "MAILGUN_SECRET",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/mailgun-secret"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/openai-api-key"
        },
        {
          "name": "SENTRY_DSN",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/sentry-dsn"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "app"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "mountPoints": [],
      "volumesFrom": []
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "ai-blockchain-analytics"
    },
    {
      "key": "Component",
      "value": "web"
    }
  ]
}