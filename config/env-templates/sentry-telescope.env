# ================================
# SENTRY CONFIGURATION
# ================================

# Sentry DSN (Data Source Name) - Get this from your Sentry project settings
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=${SENTRY_LARAVEL_DSN}

# Release and Environment Tracking
SENTRY_RELEASE=1.0.0
SENTRY_ENVIRONMENT=${APP_ENV}

# Sampling Rates (Production Optimized)
SENTRY_SAMPLE_RATE=0.1          # 10% of errors in production
SENTRY_TRACES_SAMPLE_RATE=0.05  # 5% of performance traces
SENTRY_PROFILES_SAMPLE_RATE=0.01 # 1% of profiling data

# Privacy and Security
SENTRY_SEND_DEFAULT_PII=false   # Don't send personally identifiable information
SENTRY_ENABLE_LOGS=false        # Don't send logs to Sentry

# Breadcrumbs Configuration
SENTRY_BREADCRUMBS_LOGS_ENABLED=true
SENTRY_BREADCRUMBS_CACHE_ENABLED=true
SENTRY_BREADCRUMBS_LIVEWIRE_ENABLED=true
SENTRY_BREADCRUMBS_SQL_QUERIES_ENABLED=true
SENTRY_BREADCRUMBS_SQL_BINDINGS_ENABLED=false # Don't log SQL parameters
SENTRY_BREADCRUMBS_QUEUE_INFO_ENABLED=true
SENTRY_BREADCRUMBS_COMMAND_JOBS_ENABLED=true
SENTRY_BREADCRUMBS_HTTP_CLIENT_REQUESTS_ENABLED=true
SENTRY_BREADCRUMBS_NOTIFICATIONS_ENABLED=true

# Performance Tracing
SENTRY_TRACE_QUEUE_ENABLED=true
SENTRY_TRACE_QUEUE_JOBS_ENABLED=true
SENTRY_TRACE_SQL_QUERIES_ENABLED=true
SENTRY_TRACE_SQL_BINDINGS_ENABLED=false # Don't trace SQL parameters
SENTRY_TRACE_SQL_ORIGIN_ENABLED=true
SENTRY_TRACE_SQL_ORIGIN_THRESHOLD_MS=100
SENTRY_TRACE_VIEWS_ENABLED=true
SENTRY_TRACE_LIVEWIRE_ENABLED=true
SENTRY_TRACE_HTTP_CLIENT_REQUESTS_ENABLED=true
SENTRY_TRACE_CACHE_ENABLED=true
SENTRY_TRACE_REDIS_COMMANDS=false
SENTRY_TRACE_REDIS_ORIGIN_ENABLED=true
SENTRY_TRACE_NOTIFICATIONS_ENABLED=true
SENTRY_TRACE_MISSING_ROUTES_ENABLED=false
SENTRY_TRACE_CONTINUE_AFTER_RESPONSE=true
SENTRY_TRACE_DEFAULT_INTEGRATIONS_ENABLED=true

# Resource Limits
SENTRY_MAX_BREADCRUMBS=100
SENTRY_MAX_VALUE_LENGTH=1024

# Server and Deployment Info
SENTRY_SERVER_NAME=${APP_NAME}-${APP_ENV}

# ================================
# TELESCOPE CONFIGURATION
# ================================

# Master Switch - Disable in production by default
TELESCOPE_ENABLED=false
TELESCOPE_PRODUCTION_ENABLED=false  # Set to true to enable in production

# Path and Domain
TELESCOPE_DOMAIN=
TELESCOPE_PATH=telescope

# Database Configuration
TELESCOPE_DRIVER=database
TELESCOPE_DB_CONNECTION=${DB_CONNECTION}

# Queue Configuration
TELESCOPE_QUEUE_CONNECTION=redis
TELESCOPE_QUEUE=telescope
TELESCOPE_QUEUE_DELAY=10

# Security Configuration
TELESCOPE_ALLOWED_IPS=127.0.0.1,::1  # Comma-separated list of allowed IPs
TELESCOPE_ALLOWED_EMAILS=admin@yourdomain.com  # Comma-separated list of admin emails
TELESCOPE_ADMIN_TOKEN=your-secure-admin-token-here  # Generate: openssl rand -base64 32

# Access Control
TELESCOPE_REQUIRE_AUTH=true
TELESCOPE_REQUIRE_HTTPS=true  # Require HTTPS in production
TELESCOPE_LOG_ACCESS=true     # Log access attempts

# Rate Limiting
TELESCOPE_RATE_LIMIT=60,1     # 60 requests per minute
TELESCOPE_SESSION_TIMEOUT=3600 # 1 hour session timeout

# Data Retention
TELESCOPE_RETENTION_HOURS=24   # Keep data for 24 hours in production
TELESCOPE_RETENTION_LIMIT=1000 # Maximum number of entries
TELESCOPE_AUTO_DISABLE_HOURS=24 # Auto-disable after 24 hours

# Performance Settings
TELESCOPE_SAMPLING_RATE=0.1    # Sample 10% of requests in production
TELESCOPE_MAX_ENTRIES_PER_REQUEST=50
TELESCOPE_MEMORY_LIMIT=256M

# Watchers Configuration (Production Optimized)
TELESCOPE_BATCH_WATCHER=true
TELESCOPE_CACHE_WATCHER=false         # Disabled in production
TELESCOPE_CLIENT_REQUEST_WATCHER=true
TELESCOPE_COMMAND_WATCHER=false       # Disabled in production
TELESCOPE_DUMP_WATCHER=false          # Disabled in production
TELESCOPE_DUMP_WATCHER_ALWAYS=false
TELESCOPE_EVENT_WATCHER=false         # Disabled in production
TELESCOPE_EXCEPTION_WATCHER=true      # Always enabled for error tracking
TELESCOPE_GATE_WATCHER=false          # Disabled in production
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_LOG_LEVEL=error             # Only errors in production
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=false         # Disabled in production
TELESCOPE_MODEL_HYDRATIONS=false
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=true
TELESCOPE_SLOW_QUERY_THRESHOLD=1000   # 1 second threshold in production
TELESCOPE_QUERY_LOCATION=false        # Disabled in production for performance
TELESCOPE_REDIS_WATCHER=false         # Disabled in production
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_RESPONSE_SIZE_LIMIT=32      # 32KB limit in production
TELESCOPE_SCHEDULE_WATCHER=true
TELESCOPE_VIEW_WATCHER=false          # Disabled in production

# Ignore Paths (additional to defaults)
TELESCOPE_IGNORE_PATHS=api/health,api/ready,metrics,status,horizon

# Ignore Commands (additional to defaults)
TELESCOPE_IGNORE_COMMANDS=

# Only Paths (if you want to monitor specific paths only)
TELESCOPE_ONLY_PATHS=

# Auto-Pruning
TELESCOPE_AUTO_PRUNE=true
TELESCOPE_PRUNE_HOURS=24
TELESCOPE_PRUNE_SCHEDULE="0 */6 * * *"  # Every 6 hours

# Export and Backup
TELESCOPE_EXPORT_ENABLED=false
TELESCOPE_EXPORT_MAX_ENTRIES=10000

# Application-Specific Monitoring
TELESCOPE_MONITOR_ANALYSIS_JOBS=true
TELESCOPE_MONITOR_VERIFICATION=true
TELESCOPE_MONITOR_API_USAGE=true

# ================================
# INTEGRATION SETTINGS
# ================================

# Enable/Disable specific monitoring features
MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
DEBUG_MODE_ENABLED=false  # Only enable in development

# Application Version (for release tracking)
APP_VERSION=1.0.0

# Deployment Type (for tagging)
DEPLOYMENT_TYPE=docker
CONTAINER_ROLE=app
