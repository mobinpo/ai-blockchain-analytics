# =============================================================================
# Sentiment Shield - Production Monitoring Configuration
# =============================================================================
# This file contains production-ready Sentry + Telescope configuration.
# Copy and customize for your production deployment.

# SENTRY CONFIGURATION (PRODUCTION)
SENTRY_LARAVEL_DSN=https://your-dsn@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=v1.2.0
SENTRY_SAMPLE_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.05
SENTRY_SEND_DEFAULT_PII=false
SENTRY_BREADCRUMBS_SQL_BINDINGS_ENABLED=false

# TELESCOPE CONFIGURATION (PRODUCTION - RESTRICTED)
TELESCOPE_ENABLED=false
TELESCOPE_PRODUCTION_ENABLED=false
TELESCOPE_ALLOWED_EMAILS=admin@yourdomain.com
TELESCOPE_ALLOWED_IPS=your.office.ip.address
TELESCOPE_AUTO_DISABLE_HOURS=4
TELESCOPE_SAMPLING_RATE=0.01
TELESCOPE_RETENTION_HOURS=6
TELESCOPE_HIDE_SENSITIVE=true
TELESCOPE_MASK_REQUEST_DATA=true

# MONITORING SETTINGS
MONITORING_ENABLED=true
SENTRY_CAPTURE_FAILED_JOBS=true
SENTRY_MONITOR_BLOCKCHAIN_OPS=true
SENTRY_MONITOR_AI_OPS=true