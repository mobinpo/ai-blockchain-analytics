# AI Blockchain Analytics Platform v0.9.0 - Production Environment
# Production deployment configuration

# Application
APP_NAME="AI Blockchain Analytics"
APP_ENV=production
APP_KEY=base64:WlbYNXd5V5LG25q55aiaSEvroCxxq7XyBhfjdfHwhKs=
APP_DEBUG=false
APP_URL=https://ai-blockchain-analytics.com

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=ai_blockchain_analytics
DB_USERNAME=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache & Session Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
QUEUE_CONNECTION=redis

# Mail Configuration (Mailgun Production)
MAIL_MAILER=mailgun
MAILGUN_DOMAIN=mg.ai-blockchain-analytics.com
MAILGUN_SECRET=your-production-mailgun-key
MAILGUN_ENDPOINT=api.mailgun.net
MAILGUN_TRACKING=true
MAIL_FROM_ADDRESS=welcome@ai-blockchain-analytics.com
MAIL_FROM_NAME="AI Blockchain Analytics Team"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning

# Performance Settings
OCTANE_SERVER=roadrunner

# AI/ML Services
OPENAI_API_KEY=your_production_openai_key
OPENAI_ORGANIZATION=your_production_openai_org

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=/var/www/html/storage/app/gcp-service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-production-gcp-project
GOOGLE_CLOUD_REGION=us-central1

# Monitoring & Error Tracking
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=v0.9.0
SENTRY_ENVIRONMENT=production

# Security Headers
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Feature Flags
FEATURE_SOCIAL_CRAWLING=true
FEATURE_PDF_GENERATION=true
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_VULNERABILITY_SCANNING=true
FEATURE_FAMOUS_CONTRACTS=true
FEATURE_DAILY_REPORTS=true

# Onboarding Email Flow (Production)
ONBOARDING_ENABLED=true
ONBOARDING_FROM_EMAIL=welcome@ai-blockchain-analytics.com
ONBOARDING_FROM_NAME="AI Blockchain Analytics Team"
SUPPORT_EMAIL=support@ai-blockchain-analytics.com
