{
  "family": "ai-blockchain-analytics-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ai-blockchain-analytics-task-role",
  "containerDefinitions": [
    {
      "name": "horizon-worker",
      "image": "${DOCKER_REGISTRY}/ai-blockchain-analytics-worker:${IMAGE_TAG}",
      "cpu": 768,
      "memory": 1536,
      "memoryReservation": 1024,
      "essential": true,
      "environment": [
        {"name": "APP_ENV", "value": "production"},
        {"name": "APP_DEBUG", "value": "false"},
        {"name": "LOG_CHANNEL", "value": "stderr"},
        {"name": "LOG_LEVEL", "value": "info"},
        {"name": "DB_CONNECTION", "value": "pgsql"},
        {"name": "DB_HOST", "value": "${RDS_ENDPOINT}"},
        {"name": "DB_PORT", "value": "5432"},
        {"name": "DB_DATABASE", "value": "ai_blockchain_analytics"},
        {"name": "CACHE_DRIVER", "value": "redis"},
        {"name": "QUEUE_CONNECTION", "value": "redis"},
        {"name": "REDIS_HOST", "value": "${ELASTICACHE_ENDPOINT}"},
        {"name": "REDIS_PORT", "value": "6379"},
        {"name": "AWS_DEFAULT_REGION", "value": "${AWS_REGION}"},
        {"name": "HORIZON_ENVIRONMENT", "value": "production"},
        {"name": "HORIZON_BALANCE", "value": "auto"},
        {"name": "HORIZON_MAX_PROCESSES", "value": "10"},
        {"name": "HORIZON_MIN_PROCESSES", "value": "1"}
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:password::"
        },
        {
          "name": "GOOGLE_CLOUD_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/google-cloud-api-key"
        },
        {
          "name": "ETHERSCAN_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/etherscan-api-key"
        },
        {
          "name": "BSCSCAN_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/bscscan-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics/worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "horizon",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "php artisan horizon:status || exit 1"],
        "interval": 60,
        "timeout": 30,
        "retries": 3,
        "startPeriod": 120
      },
      "command": ["php", "artisan", "horizon"],
      "mountPoints": [],
      "volumesFrom": [],
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        }
      },
      "user": "1000:1000",
      "readonlyRootFilesystem": false,
      "privileged": false,
      "stopTimeout": 120
    },
    {
      "name": "queue-worker-high",
      "image": "${DOCKER_REGISTRY}/ai-blockchain-analytics-worker:${IMAGE_TAG}",
      "cpu": 128,
      "memory": 256,
      "memoryReservation": 128,
      "essential": false,
      "environment": [
        {"name": "APP_ENV", "value": "production"},
        {"name": "APP_DEBUG", "value": "false"},
        {"name": "LOG_CHANNEL", "value": "stderr"},
        {"name": "LOG_LEVEL", "value": "info"},
        {"name": "DB_CONNECTION", "value": "pgsql"},
        {"name": "DB_HOST", "value": "${RDS_ENDPOINT}"},
        {"name": "DB_PORT", "value": "5432"},
        {"name": "DB_DATABASE", "value": "ai_blockchain_analytics"},
        {"name": "CACHE_DRIVER", "value": "redis"},
        {"name": "QUEUE_CONNECTION", "value": "redis"},
        {"name": "REDIS_HOST", "value": "${ELASTICACHE_ENDPOINT}"},
        {"name": "REDIS_PORT", "value": "6379"},
        {"name": "AWS_DEFAULT_REGION", "value": "${AWS_REGION}"}
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:password::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics/worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "queue-high",
          "awslogs-create-group": "true"
        }
      },
      "command": [
        "php", "artisan", "queue:work", "redis",
        "--queue=high,blockchain,sentiment,default",
        "--sleep=1",
        "--tries=3",
        "--max-time=3600",
        "--memory=128"
      ],
      "stopTimeout": 60
    },
    {
      "name": "queue-worker-blockchain",
      "image": "${DOCKER_REGISTRY}/ai-blockchain-analytics-worker:${IMAGE_TAG}",
      "cpu": 128,
      "memory": 256,
      "memoryReservation": 128,
      "essential": false,
      "environment": [
        {"name": "APP_ENV", "value": "production"},
        {"name": "APP_DEBUG", "value": "false"},
        {"name": "LOG_CHANNEL", "value": "stderr"},
        {"name": "LOG_LEVEL", "value": "info"},
        {"name": "DB_CONNECTION", "value": "pgsql"},
        {"name": "DB_HOST", "value": "${RDS_ENDPOINT}"},
        {"name": "DB_PORT", "value": "5432"},
        {"name": "DB_DATABASE", "value": "ai_blockchain_analytics"},
        {"name": "CACHE_DRIVER", "value": "redis"},
        {"name": "QUEUE_CONNECTION", "value": "redis"},
        {"name": "REDIS_HOST", "value": "${ELASTICACHE_ENDPOINT}"},
        {"name": "REDIS_PORT", "value": "6379"},
        {"name": "AWS_DEFAULT_REGION", "value": "${AWS_REGION}"}
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/db-credentials:password::"
        },
        {
          "name": "ETHERSCAN_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/etherscan-api-key"
        },
        {
          "name": "BSCSCAN_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:ai-blockchain-analytics/bscscan-api-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics/worker",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "queue-blockchain",
          "awslogs-create-group": "true"
        }
      },
      "command": [
        "php", "artisan", "queue:work", "redis",
        "--queue=blockchain,analysis,default",
        "--sleep=3",
        "--tries=2",
        "--max-time=7200",
        "--memory=256"
      ],
      "stopTimeout": 120
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "ai-blockchain-analytics"
    },
    {
      "key": "Component",
      "value": "worker"
    }
  ]
}