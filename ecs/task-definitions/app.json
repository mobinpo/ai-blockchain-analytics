{
  "family": "ai-blockchain-analytics-app",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "ai-blockchain-analytics-app",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/ai-blockchain-analytics:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp",
          "name": "http"
        },
        {
          "containerPort": 2112,
          "protocol": "tcp",
          "name": "metrics"
        }
      ],
      "environment": [
        {
          "name": "APP_NAME",
          "value": "AI Blockchain Analytics"
        },
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_DEBUG",
          "value": "false"
        },
        {
          "name": "APP_URL",
          "value": "https://analytics.yourcompany.com"
        },
        {
          "name": "DB_CONNECTION",
          "value": "pgsql"
        },
        {
          "name": "DB_HOST",
          "value": "ai-blockchain-analytics-postgres.cluster-xxxxx.region.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_DATABASE",
          "value": "ai_blockchain_analytics"
        },
        {
          "name": "REDIS_HOST",
          "value": "ai-blockchain-analytics-redis.xxxxx.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "REDIS_DB",
          "value": "0"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "redis"
        },
        {
          "name": "SESSION_DRIVER",
          "value": "redis"
        },
        {
          "name": "QUEUE_CONNECTION",
          "value": "redis"
        },
        {
          "name": "LOG_CHANNEL",
          "value": "cloudwatch"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "us-east-1"
        },
        {
          "name": "APP_RUNTIME",
          "value": "RoadRunner"
        }
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "/ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "/ai-blockchain-analytics/db-username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/ai-blockchain-analytics/db-password"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "/ai-blockchain-analytics/jwt-secret"
        },
        {
          "name": "COINGECKO_API_KEY",
          "valueFrom": "/ai-blockchain-analytics/coingecko-api-key"
        },
        {
          "name": "ETHERSCAN_API_KEY",
          "valueFrom": "/ai-blockchain-analytics/etherscan-api-key"
        },
        {
          "name": "SENTRY_LARAVEL_DSN",
          "valueFrom": "/ai-blockchain-analytics/sentry-dsn"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "storage",
          "containerPath": "/var/www/html/storage/app/public",
          "readOnly": false
        }
      ],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "stopTimeout": 30
    }
  ],
  "volumes": [
    {
      "name": "storage",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-xxxxxxxxx",
        "rootDirectory": "/ai-blockchain-analytics",
        "transitEncryption": "ENABLED",
        "transitEncryptionPort": 2049,
        "authorizationConfig": {
          "accessPointId": "fsap-xxxxxxxxx",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "ai-blockchain-analytics"
    },
    {
      "key": "Component",
      "value": "app"
    }
  ]
}
