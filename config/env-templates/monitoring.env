# ==========================================
# AI Blockchain Analytics - Monitoring Configuration
# ==========================================
# This file contains environment variables for monitoring and error tracking
# Copy relevant sections to your .env file for your environment

# ==========================================
# SENTRY CONFIGURATION
# ==========================================

# Sentry DSN - Get this from your Sentry project dashboard
# SENTRY_LARAVEL_DSN=https://your-dsn@sentry.io/project-id

# Sentry Environment (should match your deployment environment)
# SENTRY_ENVIRONMENT=production
# SENTRY_ENVIRONMENT=staging
# SENTRY_ENVIRONMENT=development

# Sentry Release Version (helps track issues by version)
# SENTRY_RELEASE=v1.0.0

# Sentry Sample Rates (0.0 to 1.0)
# Production recommended: 0.1 (10% of errors)
# Development: 1.0 (100% of errors)
SENTRY_SAMPLE_RATE=1.0

# Performance Monitoring Sample Rate
# Production recommended: 0.05 (5% of transactions)
# Development: 0.2 (20% of transactions)
SENTRY_TRACES_SAMPLE_RATE=0.2

# Profiling Sample Rate (requires Sentry performance plan)
# Production recommended: 0.05 (5% of transactions)
SENTRY_PROFILES_SAMPLE_RATE=0.05

# AI Blockchain Analytics Specific Sentry Settings
SENTRY_CAPTURE_FAILED_JOBS=true
SENTRY_CAPTURE_SLOW_QUERIES=true
SENTRY_SLOW_QUERY_THRESHOLD=2000
SENTRY_CAPTURE_VALIDATION_ERRORS=false

SENTRY_MONITOR_API_REQUESTS=true
SENTRY_MONITOR_BLOCKCHAIN_OPS=true
SENTRY_MONITOR_AI_OPS=true
SENTRY_MONITOR_PDF_GENERATION=true

SENTRY_INCLUDE_USER_CONTEXT=true
SENTRY_INCLUDE_REQUEST_BODY=false
SENTRY_INCLUDE_SESSION_DATA=false

# Deployment Information
APP_VERSION=1.0.0
DEPLOYMENT_ENV=local

# ==========================================
# TELESCOPE CONFIGURATION
# ==========================================

# Telescope Master Switch
# IMPORTANT: Always set to false in production unless specifically needed
TELESCOPE_ENABLED=true

# Production Access Control (DANGER: Only enable when needed!)
# TELESCOPE_PRODUCTION_ENABLED=false

# Telescope Path (change for security in production)
TELESCOPE_PATH=telescope

# Production Access Restrictions
# Comma-separated list of allowed IP addresses
# TELESCOPE_ALLOWED_IPS=192.168.1.100,10.0.0.5

# Comma-separated list of allowed user emails
# TELESCOPE_ALLOWED_USERS=admin@company.com,dev@company.com

# Required permission for Telescope access
# TELESCOPE_REQUIRED_PERMISSION=view-telescope

# Auto-disable Telescope after X hours in production (security feature)
TELESCOPE_AUTO_DISABLE_HOURS=24

# Performance Settings
TELESCOPE_SAMPLING_RATE=0.1
TELESCOPE_MEMORY_LIMIT=512M
TELESCOPE_TIME_LIMIT=30

# Data Retention (hours)
TELESCOPE_RETENTION_HOURS=24
TELESCOPE_RETENTION_LIMIT=1000

# Security Settings
TELESCOPE_HIDE_SENSITIVE=true
TELESCOPE_MASK_REQUEST_DATA=true
TELESCOPE_LOG_ACCESS=true

# Telescope Watchers (enable/disable specific monitoring)
TELESCOPE_BATCH_WATCHER=true
TELESCOPE_CACHE_WATCHER=true
TELESCOPE_CLIENT_REQUEST_WATCHER=true
TELESCOPE_COMMAND_WATCHER=true
TELESCOPE_DUMP_WATCHER=true
TELESCOPE_EVENT_WATCHER=true
TELESCOPE_EXCEPTION_WATCHER=true
TELESCOPE_GATE_WATCHER=true
TELESCOPE_HTTP_CLIENT_WATCHER=true
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=true
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=true
TELESCOPE_REDIS_WATCHER=true
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_RESPONSE_SIZE_LIMIT=64
TELESCOPE_SCHEDULE_WATCHER=true
TELESCOPE_VIEW_WATCHER=true

# ==========================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ==========================================

# LOCAL DEVELOPMENT SETTINGS:
# SENTRY_SAMPLE_RATE=1.0
# SENTRY_TRACES_SAMPLE_RATE=0.2
# TELESCOPE_ENABLED=true
# TELESCOPE_PRODUCTION_ENABLED=false

# STAGING SETTINGS:
# SENTRY_SAMPLE_RATE=0.5
# SENTRY_TRACES_SAMPLE_RATE=0.1
# TELESCOPE_ENABLED=true
# TELESCOPE_PRODUCTION_ENABLED=false

# PRODUCTION SETTINGS:
# SENTRY_SAMPLE_RATE=0.1
# SENTRY_TRACES_SAMPLE_RATE=0.05
# TELESCOPE_ENABLED=false
# TELESCOPE_PRODUCTION_ENABLED=false
# TELESCOPE_ALLOWED_IPS=your.office.ip.address
# TELESCOPE_ALLOWED_USERS=admin@yourcompany.com

# ==========================================
# SECURITY NOTES
# ==========================================
# 
# 1. NEVER enable TELESCOPE_PRODUCTION_ENABLED=true without proper IP/user restrictions
# 2. Always use HTTPS in production when accessing Telescope
# 3. Consider using a separate subdomain for Telescope in production
# 4. Regularly review Telescope access logs
# 5. Set up Sentry alerts for critical errors
# 6. Monitor Sentry quota usage to avoid overages
# 7. Use environment-specific Sentry projects for better organization
#
# ==========================================
