{
  "family": "ai-blockchain-analytics-scheduler",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT:role/ai-blockchain-analytics-task-role",
  "containerDefinitions": [
    {
      "name": "ai-blockchain-analytics-scheduler",
      "image": "YOUR_ACCOUNT.dkr.ecr.YOUR_REGION.amazonaws.com/ai-blockchain-analytics:latest",
      "essential": true,
      "command": [
        "/bin/sh",
        "-c",
        "while true; do php artisan schedule:run --verbose --no-interaction; sleep 60; done"
      ],
      "environment": [
        {
          "name": "APP_NAME",
          "value": "AI Blockchain Analytics"
        },
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_DEBUG",
          "value": "false"
        },
        {
          "name": "DB_CONNECTION",
          "value": "pgsql"
        },
        {
          "name": "DB_HOST",
          "value": "ai-blockchain-analytics-postgres.cluster-xxx.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_DATABASE",
          "value": "ai_blockchain_analytics"
        },
        {
          "name": "DB_USERNAME",
          "value": "aiblockchainanalytics"
        },
        {
          "name": "REDIS_HOST",
          "value": "ai-blockchain-analytics-redis.xxx.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "CACHE_DRIVER",
          "value": "redis"
        },
        {
          "name": "SESSION_DRIVER",
          "value": "redis"
        },
        {
          "name": "QUEUE_CONNECTION",
          "value": "redis"
        },
        {
          "name": "CONTAINER_ROLE",
          "value": "scheduler"
        },
        {
          "name": "LOG_CHANNEL",
          "value": "stderr"
        }
      ],
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/app-key"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/db-password"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:YOUR_REGION:YOUR_ACCOUNT:secret:ai-blockchain-analytics/redis-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-blockchain-analytics",
          "awslogs-region": "YOUR_REGION",
          "awslogs-stream-prefix": "scheduler"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "ps aux | grep -v grep | grep 'schedule:run' || ps aux | grep -v grep | grep 'sleep 60' || exit 1"
        ],
        "interval": 60,
        "timeout": 5,
        "retries": 2,
        "startPeriod": 30
      }
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "ai-blockchain-analytics"
    },
    {
      "key": "Component",
      "value": "scheduler"
    }
  ]
}