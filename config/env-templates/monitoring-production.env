# AI Blockchain Analytics - Production Monitoring Configuration
# Copy this to your .env file and configure with your actual values

# ==============================================================================
# SENTRY CONFIGURATION
# ==============================================================================

# Sentry DSN - Get this from your Sentry project settings
SENTRY_LARAVEL_DSN=https://your-dsn@sentry.io/project-id
SENTRY_DSN=${SENTRY_LARAVEL_DSN}

# Sentry environment and release tracking
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=v0.9.0
SENTRY_COMPONENT=main

# Sentry sampling rates (0.0 to 1.0)
SENTRY_SAMPLE_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.05
SENTRY_PROFILES_SAMPLE_RATE=0.05

# Sentry features
SENTRY_ENABLE_LOGS=true
SENTRY_SEND_DEFAULT_PII=false
SENTRY_ATTACH_STACKTRACE=true
SENTRY_MAX_BREADCRUMBS=50
SENTRY_CONTEXT_LINES=5

# Sentry performance monitoring
SENTRY_MONITOR_API=true
SENTRY_MONITOR_BLOCKCHAIN=true
SENTRY_MONITOR_AI=true
SENTRY_SLOW_REQUEST_THRESHOLD=5000
SENTRY_SLOW_QUERY_THRESHOLD=2000

# Sentry context and privacy
SENTRY_INCLUDE_USER_CONTEXT=true
SENTRY_INCLUDE_REQUEST_CONTEXT=true
SENTRY_INCLUDE_SERVER_CONTEXT=true
SENTRY_MASK_SENSITIVE_DATA=true

# ==============================================================================
# TELESCOPE CONFIGURATION
# ==============================================================================

# Telescope master switch (DISABLE in production unless needed)
TELESCOPE_ENABLED=false
TELESCOPE_PRODUCTION_ENABLED=false

# Telescope production access control
TELESCOPE_ALLOWED_IPS="127.0.0.1,::1,YOUR_OFFICE_IP,YOUR_VPN_IP"
TELESCOPE_ALLOWED_EMAILS="admin@yourcompany.com,dev@yourcompany.com"
TELESCOPE_REQUIRE_AUTH=true
TELESCOPE_MAX_FAILED_ATTEMPTS=3
TELESCOPE_LOG_ACCESS_ATTEMPTS=true

# Telescope performance settings
TELESCOPE_SAMPLING_RATE=0.1
TELESCOPE_MEMORY_LIMIT=512M
TELESCOPE_TIME_LIMIT=30
TELESCOPE_MAX_ENTRIES=1000

# Telescope data retention (in hours)
TELESCOPE_RETENTION_EXCEPTIONS=168
TELESCOPE_RETENTION_JOBS=72
TELESCOPE_RETENTION_LOGS=168
TELESCOPE_RETENTION_REQUESTS=24
TELESCOPE_RETENTION_QUERIES=24
TELESCOPE_RETENTION_CACHE=24

# Telescope watchers (disable expensive ones in production)
TELESCOPE_CACHE_WATCHER=false
TELESCOPE_COMMAND_WATCHER=true
TELESCOPE_DUMP_WATCHER=false
TELESCOPE_EVENT_WATCHER=false
TELESCOPE_EXCEPTION_WATCHER=true
TELESCOPE_JOB_WATCHER=true
TELESCOPE_LOG_WATCHER=true
TELESCOPE_MAIL_WATCHER=true
TELESCOPE_MODEL_WATCHER=false
TELESCOPE_NOTIFICATION_WATCHER=true
TELESCOPE_QUERY_WATCHER=false
TELESCOPE_REDIS_WATCHER=true
TELESCOPE_REQUEST_WATCHER=true
TELESCOPE_SCHEDULE_WATCHER=true
TELESCOPE_VIEW_WATCHER=false

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================

# Master monitoring switch
MONITORING_ENABLED=true

# Sentry detailed configuration
SENTRY_ENABLED=true
SENTRY_CAPTURE_UNHANDLED=true
SENTRY_CAPTURE_FAILED_JOBS=true
SENTRY_CAPTURE_SLOW_QUERIES=true
SENTRY_INCLUDE_SQL_BINDINGS=false

# Blockchain monitoring
SENTRY_TRACK_CONTRACT_ANALYSIS=true
SENTRY_TRACK_VERIFICATION_BADGES=true
SENTRY_TRACK_SENTIMENT_ANALYSIS=true
SENTRY_TRACK_NETWORK_OPS=true

# AI monitoring
SENTRY_TRACK_OPENAI=true
SENTRY_TRACK_SENTIMENT_PROCESSING=true
SENTRY_TRACK_ANALYSIS_GENERATION=true
SENTRY_INCLUDE_AI_METADATA=false

# Telescope blockchain features
TELESCOPE_TRACK_CONTRACT_ANALYSIS=true
TELESCOPE_TRACK_VERIFICATION=true
TELESCOPE_TRACK_SENTIMENT=true
TELESCOPE_TRACK_AI_OPS=true
TELESCOPE_HIDE_SENSITIVE_DATA=true

# ==============================================================================
# HEALTH CHECKS AND METRICS
# ==============================================================================

# Health monitoring
HEALTH_CHECKS_ENABLED=true
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true
HEALTH_CHECK_BLOCKCHAIN_RPCS=true

# Performance metrics
COLLECT_RESPONSE_TIMES=true
COLLECT_MEMORY_USAGE=true
COLLECT_QUEUE_SIZES=true
COLLECT_CACHE_HIT_RATES=true

# Business metrics
TRACK_CONTRACT_ANALYSES=true
TRACK_VERIFICATION_BADGES=true
TRACK_USER_REGISTRATIONS=true
TRACK_API_USAGE=true
TRACK_SUBSCRIPTION_EVENTS=true

# Security monitoring
TRACK_FAILED_LOGINS=true
TRACK_SUSPICIOUS_REQUESTS=true
TRACK_RATE_LIMIT_HITS=true
TRACK_UNAUTHORIZED_ACCESS=true
SECURITY_ALERT_THRESHOLD=10

# ==============================================================================
# ALERTING CONFIGURATION
# ==============================================================================

# Alerting master switch
ALERTING_ENABLED=true

# Error thresholds
ERROR_THRESHOLD_CRITICAL=0.05
ERROR_THRESHOLD_WARNING=0.02
ERROR_THRESHOLD_WINDOW=300

# Performance thresholds
RESPONSE_TIME_CRITICAL=10000
RESPONSE_TIME_WARNING=5000
MEMORY_USAGE_CRITICAL=90
MEMORY_USAGE_WARNING=80

# Alert channels
ALERT_SLACK_ENABLED=false
ALERT_EMAIL_ENABLED=true
ALERT_SENTRY_ENABLED=true
ALERT_WEBHOOK_ENABLED=false

# ==============================================================================
# DATA PRIVACY AND COMPLIANCE
# ==============================================================================

# Data masking
MASK_USER_DATA=true
MASK_IP_ADDRESSES=false
MASK_CONTRACT_ADDRESSES=false
EXCLUDE_PERSONAL_DATA=false

# Data retention
MONITORING_DATA_RETENTION=30
ANONYMIZE_DATA_AFTER=7

# GDPR compliance
GDPR_COMPLIANCE_ENABLED=true
USER_CONSENT_REQUIRED=false

# ==============================================================================
# DEPLOYMENT SPECIFIC
# ==============================================================================

# Unique deployment identifier
DEPLOYMENT_ID=prod-$(date +%Y%m%d-%H%M%S)

# Application version
APP_VERSION=v0.9.0

# Additional context tags
SENTRY_SERVER_REGION=us-east-1
SENTRY_CLUSTER_NAME=ai-blockchain-production
